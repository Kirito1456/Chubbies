<html>
    <head> 
        <title> Admin View </title> 
            <!-- CSS only -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
            <!-- JavaScript Bundle with Popper -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
            <!--css-->
            <link rel="stylesheet" type="text/css" media="all" href="styles/adminStyle.css">
            <link rel="stylesheet" type="text/css" media="all" href="styles/navbarStyles.css">
            <link rel="stylesheet" type="text/css" media="all" href="styles/footerStyles.css">
    </head> 

    <body>
        <!--Navigation Bar--> 
        <%- include('./staples/navbar3.ejs') %>
      
        <div class = "main">
          <div class = "child" id = "left">
            <div class = "headers align-middle">
            <h1> Admin View </h1>
              <img src =  "uploads/<%=img.pic%>" class="rounded-circle border border-dark border-2 profilepic" alt="100x100">
              </br> <h2> <%=User%> </h2> 
          </div> 
          
            </br>
              <button class ="btn btn-1 btn-sep icon-cart" onclick="document.getElementById('iframe').src = 
                '/adminAdd'">Add Items</button>
                </br>
                <button class ="btn btn-2 btn-sep icon-cart"onclick="document.getElementById('iframe').src = 
                '/adminRemove'">Remove Items</button>
                </br>
                <button class = "btn btn-3 btn-sep icon-heart"onclick="document.getElementById('iframe').src = 
                '/adminEdit'">Edit Items</button>
                </br>
                <button class ="btn btn-5 btn-sep icon-info" onclick="document.getElementById('iframe').src = 
                '/settings'">Account Settings</button>
                </br>
                <button class ="btn btn-5 btn-sep icon-info" onclick="document.getElementById('iframe').src = 
                '/pfpUser'">Update Profile Pic</button>
                </br>
                <form method = "get" action = "/logout">
                  <button class ="btn btn-4 btn-sep icon-send" type = "submit"> Logout </button>
                </form>
        </div>
     
      <!-- iframe -->
        <div class ="child" id = "right">
          <iframe src= "/adminAdd" id = "iframe" class = "iframe" name = "iframe" title="Iframe"></iframe>
        </div>  
    </div>

      <!--Footer-->
      <%- include('./staples/footer.ejs') %>
    </body>
</html> 