<html>
    <head> 
        <title> Admin View </title> 
            <!-- CSS only -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
            <!-- JavaScript Bundle with Popper -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
            <!--css-->
            <link rel="stylesheet" type="text/css" media="all" href="styles/adminEditstyle.css">
    </head>
    
    <body> 
      <h1> Edit Products</h1>
      <p> Click the drop down to edit the status </p>
        <table class="table align-middle">
          <thead>
            <tr>
              <th scope="col"> </th>
              <th scope="col"> </th>
              <th scope="col">Price</th>
              <th scope="col">Details</th>
            </tr>
          </thead>
          
          <tbody>
            <tr>
            <%products.forEach(product =>{%>
              <th scope="row">
                <form action="/itemEdit" method="post">
                    <input type = "hidden" name = "showProduct" value = "<%=product.name%>"> 
                    <button type = "submit" class = "back">  <button> <img src = "images/edit.png" class ="edit"></button> </button> 
                </form> 
              </th>
              <td><img src = "uploads/<%=product.pic%>" class ="product"></td>
              <td>$<%=product.price%></td>
              <td>      
                    <%if(product.stock > 0){%>
                            Available
                    <%} else {%>
                            Out of Stock
                    <%}%>
              </td>
            </tr><%})%>
          </tbody>
        </table>
      </body> 
</html>