<html>
    <head>
        <title> My Account </title>
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
        <!--css-->
        <link rel="stylesheet" type="text/css" media="all" href="styles/orders.css">
    </head>

    <body>
        <table class = "table table-borderless">
            <th> </th>
            <th> </th>
            <th> </th>
            <tr> <td colspan = "4" class = "head"> <b> Order Details </b></td></tr>
            <tr> <td colspan = "4"> <b> Date: <%=Date%></b> </td> </tr>
            <%let x=0%>
            <%products.forEach(product =>{%> 
            <tr>
                <td> </td> 
                <td> <img src = "uploads/<%=product.pic%>" class= "pic"><%=product.name%></td> 
                <td>x<%=items[x]%></td> 
                <td> $<%=price[x]%></td>
                <%x+=1%> 
            </tr><%})%>
            
            <tr> <td colspan = "4"> </td> </tr>
            <tr>
                <td colspan = "2"> Total Items</td> 
                <td class ="total"><td> <b> Total: </b> </td> 
                <td> $<%=Total%> </td> 
            </tr>
        </table>
        <form action="/orderHistory" method="get"> 
            <button type = "submit" class = "back"> <img src="images/back.png" height ="30" width="30"/> </button> 
        </form> 
    </body>
</html>