<html>
    <head> 
        <title> Admin View </title> 
            <!-- CSS only -->
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
            <!-- JavaScript Bundle with Popper -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
            <!--css-->
            <link rel="stylesheet" type="text/css" media="all" href="styles/removeAdminstyle.css">
    </head>
    
    <body> 
      <h1> Remove an Item from the Store </h1>
      <p> Click the dash button to delete </p>
      
      <% if(error_msg) { %>    
        <p class = "error"> <%= error_msg %> </p>
      <% } %>
      
      <% if(success_msg) { %>    
        <p class = "successMsg"> <%= success_msg %> </p>
      <% } %>

        <table class="table align-middle">
          <thead>
            <tr>
              <th scope="col"> </th>
              <th scope="col"> </th>
              <th scope="col">Price</th>
              <th scope="col">Details</th>
            </tr>
          </thead>
          
          <tbody>
            <%products.forEach(product =>{%>
            <tr>
              <th scope="row">
                <form action="/del" method="post">
                  <button class ="btn btn-4 btn-sep icon-send button btn2" type = "submit"> <img src = "images/dash.png" class ="dash"> </button>
                  <input type = "hidden" name = "showProduct" value = "<%=product.name%>">
                </form>
              </th>
              <td><img src = "uploads/<%=product.pic%>" class ="product"></td>
              <td>$<%=product.price%></td>
              <td>      
                <form action="/itemAdmin" method="post">
                  <button class ="btn btn-4 btn-sep icon-send button btn2" type = "submit"> <img src="images/more.png" height ="30" width="30"/> </button>
                  <input type = "hidden" name = "showProduct" value = "<%=product.name%>">
                </form>
              </td>
            </tr><%})%>
          </tbody>
        </table>
      </body> 
</html>