<html>
    <head>
        <title> Order History </title>
        <!-- CSS only -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
        <!-- JavaScript Bundle with Popper -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
        <!--css-->
        <link rel="stylesheet" type="text/css" media="all" href="styles/buttons.css">
    </head>

    <body> 
      <h1> ORDER HISTORY </h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Order Number</th>
            <th scope="col">Date</th>
            <th scope="col">Total</th>
            <th scope="col">Details</th>
          </tr>
        </thead>
        
        <%let x = 0;%>
        <tbody>
        <%orders.forEach(order =>{%>
            <% x+=1;%>
          <tr>
            <th scope="row"><%=x%></th>
            <td name><%=order.date%></td>
            <td>$<%=order.price%></td>
            <td>      
                <form action="/order" method="post"> 
                    <input type = "hidden" name = "orderView" value = "<%=order.orderNumber%>">
                    <button type = "submit"> <img src="images/more.png" height ="30" width="30"/> </button> 
                </form> 
            </td>
          </tr><%})%>
        </tbody>
      </table>
    </body> 
</html>